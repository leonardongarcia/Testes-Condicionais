/******************************************************************************

8) Escreva um algoritmo que leia trÃªs valores inteiros e diferentes e mostre-os em ordem
decrescente.

*******************************************************************************/
#include <stdio.h>



int mostrarDecrescentes (int A, int B, int C) {
    
    if (A > B && B > C)  
        printf("%i %i %i\n", A, B, C);
        else if (A > C && C > B)  
        printf("%i %i %i\n", A, C, B);
        else if (B > A && A > C) 
        printf("%i %i %i\n", B, A, C);
        else if (B > C && C > A) 
        printf("%i %i %i\n", B, C, A);
        else if (C > A && A > B) 
        printf("%i %i %i\n", C, A, B);
        else 
            printf("%i %i %i\n", C, B, A);
        
    return 0;
    
}

int main() {
    
    printf("%d\n", mostrarDecrescentes(1, 2, 3));
    printf("%d\n", mostrarDecrescentes(1, 3, 2));
    printf("%d\n", mostrarDecrescentes(2, 1, 3));
    printf("%d\n", mostrarDecrescentes(2, 3, 1));
    printf("%d\n", mostrarDecrescentes(3, 1, 2));
    printf("%d\n", mostrarDecrescentes(3, 2, 1));

    return 0;
}
